# ALIASES

alias gitsync='sh ~/Repos/.github_sync.sh'
alias repo='sh ~/Repos/.work_on_repos.sh'
eval $(thefuck --alias)


# FUNCTIONS

function gitall() {
	git status;
	git add .;
	[ -n "$1" ] && git commit -m "$1" || git commit;
	git push;
}

function gitback() {
	git reset --hard HEAD~"$1"
}

